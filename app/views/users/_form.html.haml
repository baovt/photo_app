= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password_salt
    = f.text_field :password_salt
  .field
    = f.label :password_hash
    = f.text_field :password_hash
  .field
    = f.label :persistence_token
    = f.text_field :persistence_token
  .field
    = f.label :perishable_token
    = f.text_field :perishable_token
  .field
    = f.label :single_access_token
    = f.text_field :single_access_token
  .field
    = f.label :last_request_at
    = f.datetime_select :last_request_at
  .actions
    = f.submit 'Save'
