 <div class="content-slider">
    	<h3 class="head-big">Featured Work</h3>
		<div id="slides">
			<div class="slide-wrapper">
			 <% @photos.each do |photo| %>
          <div class="slide-thumbnail">
              <%= image_tag(photo.image.url, :alt => "photo", :class => "shadow-img") %>
          </div>
          <div class="slide-details">
            <h2 class="font-em"><a href="#"><%= photo.name %></a></h2>
            <div class="description">
              <p>
                <%= photo.caption %>
              </p>
               <a href="#" class="more">View Case Study »</a>
            </div>
          </div>
				<% end %>
				<div class="clear"></div>
			</div>
			
			
		</div>
			
		<div id="myController">
		<%= will_paginate @photos, :previous_label     => '&laquo;',  :next_label     => '&raquo;', :class => "flickr_pagination" %>
		</div>
		<div class="clear"></div>
	</div> <!--end content-slider-->
    
