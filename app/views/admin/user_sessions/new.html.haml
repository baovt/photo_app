= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f|
  .field.username
    = f.label :username
    = f.text_field :username, :class => 'text'
  .field.password
    = f.label :password
    = f.password_field :password, :class => 'text'
  .field.submit
    = f.submit 'Sign In'